<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/home_auto_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <app.axe.imooc.customui.viewpager.AutoScrollViewPager
            android:id="@+id/home_head_autopager"
            android:layout_width="match_parent"
            android:layout_height="170dp" />

        <app.axe.imooc.customui.viewpager.CirclePageIndicator
            android:id="@+id/home_head_cli"
            android:layout_width="200dp"
            android:layout_height="10dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <RelativeLayout
        android:id="@+id/home_head_recommend_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_with_selector"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/tv_recommand_text"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:text="@string/recommand_object"
            android:textColor="@color/text_color"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical"
            android:text="@string/recommand_try_change"
            android:textColor="@color/title_color"
            android:textSize="12sp" />

        <app.axe.imooc.customui.home.MultiImagesView
            android:id="@+id/home_multi_images"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_recommand_text"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            app:imageMagin="2dp"
            app:lineCount="4" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/home_head_ll_foot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

</LinearLayout>