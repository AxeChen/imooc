<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/common_load_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_centerInParent="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    >

    <ProgressBar
        android:id="@+id/common_load_progressbar"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/common_horizontal_description"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@id/common_load_progressbar"
        android:text="loading"
        android:visibility="gone"
        android:textColor="@color/black_000000"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/common_vertical_description"
        android:layout_width="wrap_content"
        android:layout_below="@+id/common_load_progressbar"
        android:text="loading"
        android:textColor="@color/black_000000"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content" />

</RelativeLayout>